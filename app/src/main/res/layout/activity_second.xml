<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TextView to display received message from MainActivity -->
    <TextView
        android:id="@+id/receivedMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No message received"
        android:padding="8dp"
        android:textSize="16sp" />

    <!-- EditText to type a reply to send back to MainActivity -->
    <EditText
        android:id="@+id/editTextSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter reply to send"
        android:padding="8dp" />

    <!-- Button to send reply back to MainActivity -->
    <Button
        android:id="@+id/sendButtonSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dingley"
        android:text="Send"
        android:textColor="@android:color/white"
        android:padding="12dp" />
</LinearLayout>
